<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jun.znews">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ThisApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/WelcomeTheme" >

        </activity>
        <activity
            android:name=".ui.news.ArticleActivity"
            android:theme="@style/BGA" />
        <activity
            android:name=".ui.news.AdvertActivity"
            android:theme="@style/BGA" />
        <activity
            android:name=".ui.news.ImageBrowseActivity"
            android:theme="@style/BGA_Photo" />
        <activity
            android:name=".ui.user.LoginActivity"
            android:theme="@style/BGA" />
        <activity
            android:name=".ui.user.UserInfoActivity"
            android:theme="@style/BGA" />
        <activity
            android:name=".ui.suggest.SuggestActivity"
            android:theme="@style/BGA" />
        <activity
            android:name=".ui.AboutActivity"
            android:theme="@style/BGA" />
        <activity
            android:name=".ui.news.VideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/BGA_video" />
        <activity android:name=".ui.setting.SettingActivity" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:background="#000000"
            android:id="@+id/item_news_img"
            android:layout_width="140dp"
            android:layout_height="90dp" />
        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:id="@+id/item_news_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_news_img"
            android:text="新闻标题新闻标题新闻标题新闻标题新闻标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/item_news_author"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/item_news_time"
            android:text="authorauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/item_news_time"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:text="时间时间时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>